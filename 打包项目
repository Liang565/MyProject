  // 打包配置，在项目vite.config.ts中配置
  export default defineConfig({
  build: {
    target: "modules",
    outDir: "../server/public/admin", //指定输出路径
  },}
  然后再package.json里面加脚本

  "scripts": {
  "push": "cd .. && git add -A && git commit -am '图片'&&git push",
  "admin": "rm -rf ./public/admin/ && cd ../admin && npm run build && cd ../server",
  "web": "rm -rf ./public/web/ && cd ../web && npm run build && cd ../server",

  "server": "rm -rf prod && cp -rf dist prod"}
  
